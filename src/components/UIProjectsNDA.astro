---
import { Icon } from "astro-icon/components";

const ndaProjects = [
  {
    icon: "1",
    title: "Event Ticketing Marketplace Platform",
    description:
      "Worked on multi-role interfaces for a ticketing marketplace, covering end-user purchase flows, seller dashboards, and internal operational tools. The primary focus was ensuring clear role separation and reducing overlap across user experiences.",
  },
  {
    icon: "2",
    title: "Race Event Ticketing & Validation System",
    description:
      "Designed interfaces for event ticketing and on-site validation, including customer ticket access, event organizer views, and validator scanning flows. Strong emphasis on clarity and speed due to real-time, on-site usage.",
  },
  {
    icon: "3",
    title: "Desktop Application for Identity Management",
    description:
      "Designed a desktop interface supporting data input, verification processes, and administrative workflows within a large-scale identity system. Focused on accuracy, clarity, and error prevention.",
  },
  {
    icon: "4",
    title: "Real-Time Monitoring Dashboard for Transportation Systems",
    description:
      "Worked on a high-visibility dashboard for monitoring system status, devices, and operational health in real time. The interface was designed for large displays and fast-paced operational environments.",
  },
  {
    icon: "5",
    title: "Airline Catering Operations Management System",
    description:
      "Created web and desktop dashboards supporting airline catering operations, with an emphasis on workflow visualization and reducing friction in daily operational tasks.",
  },
  {
    icon: "1",
    title: "Operational Support Tools for Transportation Ecosystem",
    description:
      "Contributed to UI development across multiple operational tools, ranging from internal admin systems to passenger-facing and monitoring interfaces, ensuring consistency across different environments.",
  },
];

const bgClasses = [
  "bg-pgreen rounded-full",
  "bg-pblue rounded-2xl",
  "bg-ppink",
  "bg-pyellow rounded-md",
];

const getRandomClass = () => {
  return bgClasses[Math.floor(Math.random() * bgClasses.length)];
};
---

<section class="flex flex-col text-center gap-8 py-20">
  <div class="flex flex-col gap-4">
    <p class="text-pblack">Selected confidential client work</p>
    <h2 class="section-heading text-2xl md:text-4xl font-bold" data-section="UI Projects (NDA)">
      UI Projects (NDA)
    </h2>
  </div>

  <div class="flex justify-center">
    <div class="max-w-4xl w-full">
      <ul class="flex flex-col gap-4 text-left">
        {
          ndaProjects.map((project) => {
            const randomClass = getRandomClass();
            return (
              <li class="border border-black rounded-lg p-4 shadow-card hover:shadow-hover transition-all duration-300">
                <div class="flex items-start gap-4">
                  <div
                    class={`${randomClass} p-2 border border-black shadow-card1 flex-shrink-0 mt-1`}
                  >
                    <Icon
                      name={project.icon}
                      class="text-lg"
                      aria-hidden="true"
                    />
                  </div>
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-black mb-2">
                      {project.title}
                    </h3>
                    <p class="text-sm text-gray-600 leading-relaxed">
                      {project.description}
                    </p>
                  </div>
                </div>
              </li>
            );
          })
        }
      </ul>

      <div class="mt-8 p-4 bg-gray-100 rounded-lg border border-gray-300">
        <p class="text-sm text-gray-700 text-center">
          <strong>Note:</strong> These projects were delivered under Non-Disclosure
          Agreements (NDA). Detailed designs and implementations cannot be shared
          publicly due to confidentiality constraints.
        </p>
      </div>
    </div>
  </div>
</section>
