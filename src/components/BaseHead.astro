---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import "../styles/global.css";

interface Props {
  title: string;
  description: string;
  image?: string;
}

import { ClientRouter } from "astro:transitions";
const {
  title,
  description,
  image = "/screenshot.jpg",
} = Astro.props;

const seoTitle = title.includes("Riani")
  ? title
  : `${title} | Riani BM – UX Engineer Indonesia`;

---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<meta name="generator" content={Astro.generator} />
<link rel="canonical" href={Astro.url.href} />
<meta name="robots" content="index, follow" />

<!-- Accessibility if someone uses screen reader -->
<meta name="color-scheme" content="light dark" />

<!-- Early hints: preconnect to third-party origins -->
<link rel="dns-prefetch" href="https://static.hotjar.com" />
<link rel="preconnect" href="https://static.hotjar.com" crossorigin />

<!-- Font preloads (only above-the-fold critical weights) -->
<link rel="preload" href="/fonts/Alexandria-Regular.woff2" as="font" type="font/woff2" crossorigin />
<link rel="preload" href="/fonts/Alexandria-Bold.woff2" as="font" type="font/woff2" crossorigin />
<link rel="preload" href="/fonts/Kablammo-Regular.woff2" as="font" type="font/woff2" crossorigin />


<!-- Primary Meta Tags -->
<title>{seoTitle}</title>
<ClientRouter />
<meta name="title" content={seoTitle} />
<meta name="description" content={description} />
<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
<link rel="manifest" href="/favicon/site.webmanifest" crossorigin="use-credentials">

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url.href} />
<meta property="og:title" content={seoTitle} />

<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={seoTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={new URL(image, Astro.url)} />

<!-- Hotjar Tracking Code — deferred to idle time -->
<script is:inline>
function loadHotjar() {
    (function(h,o,t,j,a,r){
        h.hj=h.hj||function(){(h.hj.q=h.hj.q||[]).push(arguments)};
        h._hjSettings={hjid:3644251,hjsv:6};
        a=o.getElementsByTagName('head')[0];
        r=o.createElement('script');r.async=1;
        r.src=t+h._hjSettings.hjid+j+h._hjSettings.hjsv;
        a.appendChild(r);
    })(window,document,'https://static.hotjar.com/c/hotjar-','.js?sv=');
}
if ('requestIdleCallback' in window) {
    requestIdleCallback(loadHotjar, { timeout: 3500 });
} else {
    setTimeout(loadHotjar, 3500);
}
</script>

<!-- Person Schema -->
<script type="application/ld+json">
{JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Person",
  name: "Riani BM",
  url: Astro.site,
  jobTitle: "UX Engineer",
  address: {
    "@type": "PostalAddress",
    addressLocality: "Jakarta",
    addressCountry: "Indonesia",
  },
  sameAs: [
    "https://www.linkedin.com/in/rianibm",
    "https://github.com/rianibm",
  ],
})}</script>

<script is:inline>
  document.addEventListener("astro:after-swap", function () {
    var main = document.querySelector("main");
    if (main) main.focus();
    // Re-init Hotjar on page swap
    if (window.hj) window.hj("stateChange", location.pathname);
  });
</script>
