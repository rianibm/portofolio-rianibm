---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif}",
);

const startDate = new Date("2023-03-05");
const now = new Date();

let years = now.getFullYear() - startDate.getFullYear();
const hasNotPassedAnniversary =
  now.getMonth() < startDate.getMonth() ||
  (now.getMonth() === startDate.getMonth() && now.getDate() < startDate.getDate());

if (hasNotPassedAnniversary) {
  years -= 1;
}
---

<section class="py-20 flex md:flex-row flex-col px-4 md:px-0 gap-10 md:gap-0">
  <div class="flex flex-col gap-6 justify-start items-start md:w-1/2">
    <h1 class="text-pblack hero-entrance" style="--delay: 0s">Riani BM</h1>
    <p class="text-6xl font-bold hero-entrance" style="--delay: 0.1s">
      UX Engineer
    </p>
    <p class="hero-entrance" style="--delay: 0.2s">
      A Frontend Developer from Indonesia with {years}+ years of experience who enjoys
      thinking through user context and behavior before turning it into
      interface decisions.
    </p>
    <a
      rel="noopener noreferrer"
      href="mailto:rianimatialu@gmail.com"
      target="_blank"
      aria-label="Email Riani BM"
      class="bg-pgreen px-5 py-3 border-1 border-black rounded-lg shadow-card hover:shadow-hover transition hero-entrance settle"
      style="--delay: 0.3s"
    >
      Hire Me!
    </a>
  </div>
  <div
    class="md:w-1/2 object-contain flex items-center justify-center p-10 group hero-entrance from-right"
    style="--delay: 0.2s"
  >
    <a
      rel="noopener noreferrer"
      href="https://www.linkedin.com/in/rianibm/"
      target="_blank"
      aria-label="LinkedIn Riani BM"
    >
      <div
        class="bg-pblue border-3 border-black rounded-2xl h-52 w-60 shadow-card group-hover:shadow-hover flex transition relative settle"
      >
        <div
          class="absolute -top-8 -left-12 text-5xl bg-ppink px-5 py-1 z-10 shadow-card group-hover:shadow-hover transition rounded-t-2xl border-3 border-black rounded-bl-2xl rounded-br-sm hero-entrance scale-in"
          style="--delay: 0.5s"
        >
          <Icon name="paint" aria-hidden="true" />
        </div>
        <div
          class="absolute top-16 -right-16 text-5xl bg-pyellow p-2 z-10 shadow-card group-hover:shadow-hover transition rounded-full border-3 border-black hero-entrance scale-in"
          style="--delay: 0.6s"
        >
          <Icon name="beach" aria-hidden="true" />
        </div>
        <div
          class="absolute text-nowrap flex items-center gap-4 -bottom-12 right-0 pr-4 bg-pgreen pl-1 z-10 shadow-card1 group-hover:shadow-card transition rounded-full border-3 border-black hero-entrance scale-in"
          style="--delay: 0.7s"
        >
          <Icon name="beach" aria-hidden="true" />
          <p>Riani BM</p>
        </div>
        <div class="h-80 w-60 overflow-hidden relative -mt-30 rounded-2xl">
          <Image
            class="object-bottom absolute bottom-0 group-hover:scale-105 transition"
            src={images["/src/assets/rianibm-removebg-preview.png"]()}
            alt="Riani BM"
          />
        </div>
      </div></a
    >
  </div>
</section>
