---
import BaseHead from "@/components/BaseHead.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

import offlineAvif from "@/assets/images/errors/no-internet.avif";
import offlineWebp from "@/assets/images/errors/no-internet.webp";
import offlinePng from "@/assets/images/errors/no-internet.png";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title="Offline â€“ No Internet Connection"
      description="You appear to be offline. Please check your internet connection."
    />
    <meta name="robots" content="noindex, nofollow" />
  </head>
  <body class="p-0 m-0 max-w-screen">
    <Header />
    <main
      id="main-content"
      tabindex="-1"
      class="container mx-auto md:px-10 flex flex-col items-center justify-center min-h-[60vh] text-center px-6 py-16 gap-6"
    >
      <picture>
        <source srcset={offlineAvif.src} type="image/avif" />
        <source srcset={offlineWebp.src} type="image/webp" />
        <img
          src={offlinePng.src}
          alt=""
          role="presentation"
          class="w-64 md:w-80 h-auto"
          width={offlinePng.width}
          height={offlinePng.height}
          loading="eager"
        />
      </picture>
      <h1 class="text-3xl md:text-5xl font-semibold">
        <span class="font-kablamo text-ppink">O</span>ffline
      </h1>
      <p class="text-pblack text-sm md:text-base max-w-md">
        You appear to be offline. Please check your internet connection and try
        again.
      </p>
      <button
        onclick="window.location.reload()"
        class="inline-block px-6 py-3 bg-black text-white rounded-lg font-semibold text-sm hover:shadow-hover transition-all duration-200 border border-black cursor-pointer"
      >
        Try Again
      </button>
    </main>
    <Footer />
  </body>
</html>
