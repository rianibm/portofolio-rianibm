---
import BaseHead from "@/components/BaseHead.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

import errorAvif from "@/assets/images/errors/404.avif";
import errorWebp from "@/assets/images/errors/404.webp";
import errorPng from "@/assets/images/errors/404.png";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title="404 â€“ Page Not Found" description="The page you're looking for doesn't exist." />
    <meta name="robots" content="noindex, nofollow" />
  </head>
  <body class="p-0 m-0 max-w-screen">
    <Header />
    <main class="container mx-auto md:px-10 flex flex-col items-center justify-center min-h-[60vh] text-center px-6 py-16 gap-6">
      <picture>
        <source srcset={errorAvif.src} type="image/avif" />
        <source srcset={errorWebp.src} type="image/webp" />
        <img
          src={errorPng.src}
          alt="404 - Page not found"
          class="w-64 md:w-80 h-auto"
          width={errorPng.width}
          height={errorPng.height}
          loading="eager"
        />
      </picture>
      <h1 class="text-3xl md:text-5xl font-semibold">
        <span class="font-kablamo text-ppink">4</span>04
      </h1>
      <p class="text-pblack text-sm md:text-base max-w-md">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <a
        href="/"
        class="inline-block px-6 py-3 bg-black text-white rounded-lg font-semibold text-sm hover:shadow-hover transition-all duration-200 border border-black"
      >
        Back to Home
      </a>
    </main>
    <Footer />
  </body>
</html>
