---
import BaseHead from "@/components/BaseHead.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Hero from "@/components/Hero.astro";
import WhatIDo from "@/components/WhatIDo.astro";
import Skills from "@/components/Skills.astro";
import Education from "@/components/Education.astro";
import Certification from "@/components/Certification.astro";
import LookingFor from "@/components/LookingFor.astro";
---
<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="p-0 m-0 max-w-screen">
    <Header />
    <main class="container mx-auto md:px-10">
      <Hero />
      <WhatIDo />
      <Skills />
      <Education />
      <Certification />
      <LookingFor />
    </main>
    <Footer />
  </body>
</html>